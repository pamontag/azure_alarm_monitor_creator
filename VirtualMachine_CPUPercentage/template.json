{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alertName": {
            "type": "String"
        },
        "alertDescription": {
            "type": "String"
        },
        "alertFrequency": {
            "type": "String",
            "defaultValue": "PT15M"
        },
        "alertPeriod": {
            "type": "String",
            "defaultValue": "PT15M"
        },
        "alertThreshold": {
            "type": "Int",
            "defaultValue": 90
        },
        "alertSeverity": {
            "type": "Int",
            "defaultValue": 1
        },
        "vmName": {
            "type": "String"
        },
        "actiongroup_id": {
            "type": "String",
            "defaultValue": "" 
        }
    },
    "variables": {
        "vmResourceId": "[resourceId('Microsoft.Compute/virtualMachines',parameters('vmName'))]",
        "empty": [],
        "actionGroups": 
        [
            {
                "actionGroupId": "[parameters('actiongroup_id')]",
                "webHookProperties": {}
            }
        ]
    },
    "resources": [
        {
            "type": "microsoft.insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[parameters('alertName')]",
            "location": "global",
            "properties": {
                "description": "[parameters('alertDescription')]",
                "severity": "[parameters('alertSeverity')]",
                "enabled": true,
                "scopes": [
                    "[variables('vmResourceId')]"
                ],
                "evaluationFrequency": "[parameters('alertFrequency')]",
                "windowSize": "[parameters('alertPeriod')]",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": "[parameters('alertThreshold')]",
                            "name": "Metric1",
                            "metricNamespace": "azure.vm.windows.guestmetrics",
                            "metricName": "Processor Information\\% Processor Time",
                            "dimensions": [],
                            "operator": "GreaterThan",
                            "timeAggregation": "Average",
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.MultipleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.Compute/virtualMachines",
                "targetResourceRegion": "westeurope",
                "actions": "[if(empty(parameters('actiongroup_id')), variables('empty'), variables('actionGroups'))]"
                
            }
        }
    ]
}